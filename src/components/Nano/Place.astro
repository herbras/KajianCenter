---
const { jalan, kabupaten, provinsi, kodepos, tempat, gmapLink } = Astro.props;
---

<div
    class="rounded-lg flex flex-wrap items-center border border-blue-500 shadow-lg overflow-hidden"
>
    <div class="p-4 flex-grow">
        <div class="flex items-center">
            <div
                class="h-8 w-8 bg-blue-100 text-blue-500 rounded-full flex justify-center items-center"
            >
                <!-- Pastikan Anda memiliki ikon yang sesuai di sini -->
                <div class="h-5 w-5 i-fluent-emoji-mosque"></div>
            </div>
            <h3 class="text-lg font-semibold text-gray-800 ml-2">
Tempat            </h3>
        </div>
        <iframe
        title="Map Sunat Express"
        src={gmapLink}
        class="w-full h-[200px] rounded-md"
        allowfullscreen=""
        aria-hidden="false"
        tabindex="0"></iframe>
    <a href={gmapLink} class="flex  flex-col relative p-3 decoration-none">

            <h3
                class="font-bold m-0 text-gray-700 items-center no-underline"
                >{tempat}</h3>
            <p
                class="font-bold m-0 text-gray-700 items-center no-underline"
                >{jalan}</p
            ><p
                class="mt-0.5 text-gray-700 items-center no-underline"
               
                >{kabupaten}, {provinsi},{kodepos}</p
            >
    </div>
        </div>
        </div>
        


